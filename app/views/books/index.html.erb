	<thead>
		<tr>
			<th>Title</th>
			<th>Boby</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbosy>
		<% @books.each do |book| %>
		<tr>
			<td><%=book.title %></td>
			<td><%=book.body %></td>
			<td> <%=link_to"Show",book_path(book.id) %></td>
			<td><%=link_to"Edit",edit_book_path(book.id)%></td>
			<td><%=link_to"Destroy",book_path(book.id), method: :delete %>
