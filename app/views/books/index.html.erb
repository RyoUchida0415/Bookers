<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Boby</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbosy>
		<% @books.each do |book| %>
		<tr>
			<td><%=book.title %></td>
			<td><%=book.body %></td>
			<td><%=link_to"Show",book_path(book.id) %></td>
			<td><%=link_to"Edit",edit_book_path(book.id)%></td>
			<td><%=link_to"Destroy",book_path(book.id), method: :delete %>
			</td>
		</tr>
		<% end %>
</table>

<h2>New Book</h2>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
   <div id=error_explanation>
   	<h2><%= @book.error.count %> errors prihibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
   <h3>Title</h3>
   <%=f.text_field :title %>

   <h3>Boby</h3>
   <%=f.text_area :body %>

   <%= f.submit 'Create Book' %>
<%end%>